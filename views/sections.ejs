<%

	seo.title = "Sections";

%>

<!DOCTYPE html>
<html lang="en">
<head>

	<% include include/seo/standard.ejs %>
	<% include include/head.ejs %>

</head>
<body>
		
	<% include include/menu.ejs %>

	<div class="app">

		<div class="section">

			<h1>Sections</h1>

			<div class="sections">

				<% for (section of new Set(posts.all().filter(_ => !!_.fields.category).map(_ => _.fields.category.split(",")[0]))) { %>

					<a href="/section/<%- slugify(section) %>" class="panel">

						<h2><%- section %></h2>

					</a>
		
				<% } %>

			</div>

		</div>

	</div>

	<% include include/footer.ejs %>

</body>
</html>
