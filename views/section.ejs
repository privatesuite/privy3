<%

	seo.title = capitalize(params.section);
	seo.description = `Articles labelled "${capitalize(params.section)}"`

%>

<!DOCTYPE html>
<html lang="en">
<head>

	<% include include/seo/standard.ejs %>
	<% include include/head.ejs %>

</head>
<body>

	<% include include/menu.ejs %>

	
	<div class="app">

		<div class="section">

			<h1><%- capitalize(params.section) %></h1>

		</div>

		<!-- <div class="hr"></div> -->

		<div class="section posts">

			<% for (const post of posts.section(params.section).reverse()) { %>

				<div>

					<img src="<%- post.fields.image ? file(post.fields.image) : default_image %>" class="panel flexible">

					<div>
								
						<h2 class="dark"><%- post.fields.title %></h2>
						<h3><%- post.fields.subtitle %></h3>

						<p><strong><%- post.fields.authors %> &mdash; <a href="<%- posts.issueLink(post.fields.issue) %>"><%- post.fields.issue || "Unknown Issue" %></a></strong><br><%- trim(removeHTMLTags(post.fields.content), 256) %></p>

						<a href="/post/<%- slugify(post.fields.title) %>">READ NOW &raquo;</a>

					</div>			
		
				</div>
		
			<% } %>

		</div>

	</div>

	<% include include/footer.ejs %>

</body>
</html>
